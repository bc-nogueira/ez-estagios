<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Empresa</th>
    <th>Descrição</th>
    <th>Aluno</th>
    <th>Situação <i class="fa fa-question-circle" aria-hidden="true"
                  <%= bootstrap_tooltip :info_descricao_candidaturas %>></i></th>
    <th class="text-right">Ações</th>
  </tr>
  </thead>
  <tbody>
  <% aluno_vagas.each do |aluno_vaga| %>
      <tr>
        <td><%= aluno_vaga.vaga.empresa.nome %></td>
        <td><%= aluno_vaga.vaga.descricao %></td>
        <td><%= aluno_vaga.aluno.matricula %></td>
        <td><%= texto_situacao_aluno_vaga(aluno_vaga) %></td>
        <td>
          <% if aluno_vaga.validado_coordenador? %>
            <%= link_to 'Aprovar', aluno_vaga, method: :delete,
                        class: 'btn btn-success mx-2 pull-right',
                        data: { confirm: 'Você tem certeza?' } %>
            <%= link_to 'Rejeitar', aluno_vaga, method: :delete,
                        class: 'btn btn-danger mx-2 pull-right',
                        data: { confirm: 'Você tem certeza?' } %>
          <% else %>
            Aguardando liberação do coordenador.
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>