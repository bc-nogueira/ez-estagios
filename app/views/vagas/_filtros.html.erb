<div class="card p-3 mb-3">
<h4>Filtros</h4>
<%= form_tag vagas_path, method: :get do  %>

      <div class="row">
       <div class="col-1">
          <%= label_tag 'Empresa:' %>
        </div>
        <div class="col-4">
          <div class="form-group">
            <%= select_tag :por_empresa, options_from_collection_for_select(Empresa.all, :id, :nome),
                       class: 'form-control mr-sm-2 select_curso' %>
          </div>
        </div>
      <div class="col-3">
        <div class="form-group form-check form-check-inline">
          <div class="form-control ">
            <%= check_box_tag :solicitacao, true, false, class: "form-check-input" %>
            <%= label_tag :solicitacao, "Match Habilidades", class:"form-check-label" %>
          </div>
        </div>
      </div>
        <div class="col-4">
          <div class="form-group">
            <%= submit_tag 'Buscar', class: 'btn btn-outline-primary my-2 my-sm-0 w-100 ls-3'  %>
          </div>
        </div>
      </div>
  <% end %>
</div>