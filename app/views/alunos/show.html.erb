<div class="card p-3 mb-3">
  <div class="row">
    <div class="col-2">
      <%= image_tag "default-user.jpg", class: 'mr-4 rounded border border-gray imagem-lista-vagas'  %>
    </div>

    <div class="col-10">
      <h1><%= @aluno.pessoa.nome %></h1>
      <div class="row">
        <strong class="col-2">E-mail:</strong>
        <%= @aluno.pessoa.account.email %>
      </div>

      <div class="row">
        <strong class="col-2">CPF:</strong>
        <%= @aluno.pessoa.cpf %>
      </div>

      <div class="row">
        <strong class="col-2">Matr√≠cula:</strong>
        <%= @aluno.matricula %>
      </div>

    </div>

  </div>
  <div class="container mt-5">
    <%= render "tabela_habilidades" %>
  </div>

</div>

  <%= render "alunos/habilidades" %>

  <div class="card p-3 mb-3">
    <div class="row">
      <%= link_to 'Voltar', alunos_path, class: 'btn btn-secondary col-1 ml-3' %>
      <% if current_account.is_aluno? && current_account.perfil.papel.id == @aluno.id %>
        <%= link_to 'Editar', edit_aluno_path, class: 'btn btn-outline-info col-1 ml-3' %>
      <% end %>
    </div>
</div>

