<h2 class="pointer-cursor" id="espera-title">
  Em Espera <%= fa_icon 'angle-down', id: 'espera-icon' %>
</h2>
<div id="espera-div" style="display: none">
  <%= render partial: 'vagas/table_avaliacao',
             locals: { vagas: vagas.select { |vaga| vaga.validada.nil? },
                       estado_vaga: nil } %>
</div>
<hr>

<h2 class="pointer-cursor text-success" id="aprovadas-title">
  Aprovadas <%= fa_icon 'angle-down', id: 'aprovadas-icon' %>
</h2>
<div id="aprovadas-div" style="display: none">
  <%= render partial: 'vagas/table_avaliacao',
             locals: { vagas: vagas.select { |vaga| vaga.validada == true },
                       estado_vaga: :aprovada } %>
</div>
<hr>

<h2 class="pointer-cursor text-danger" id="reprovadas-title">
  Reprovadas  <%= fa_icon 'angle-down', id: 'reprovadas-icon' %>
</h2>
<div id="reprovadas-div" style="display: none">
  <%= render partial: 'vagas/table_avaliacao',
             locals: { vagas: vagas.select { |vaga| vaga.validada == false },
                       estado_vaga: :reprovada } %>
</div>
