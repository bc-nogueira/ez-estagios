    <div class="form-group col-6">
      <%= f.label :data_resposta %>
      <%= f.text_field :data_resposta, class: 'form-control datepicker' %>
    </div>
  </div>
<div class="row">
  <div class="col-12">
    <%= f.submit 'Salvar', class: 'btn btn-success pull-right' %>
      <% if vaga.persisted? %>
          <%= active_link_to 'Voltar', vaga, class: 'btn btn-primary' %>
      <% else %>
        <%= active_link_to 'Voltar', vagas_path, class: 'btn btn-primary' %>
