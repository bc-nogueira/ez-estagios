<h1>Bem-vindo!</h1>
<div class="row">
  <div class="col-4">
    <div class="card-icons">
      <%= active_link_to vagas_path do %>
          <div class="card">
            <div class="card-body text-center">
              <h1>
                <%= fa_icon('suitcase', style: 'font-size: 5em;') %>
                <br/>
                Vagas
              </h1>
            </div>
          </div>
      <% end %>
    </div>

  </div>
  <div class="col-4">
    <div class="card-icons">
      <%= active_link_to aluno_vagas_path do %>
          <div class="card">
            <div class="card-body text-center">
              <h1>
                <%= fa_icon('list', style: 'font-size: 5em;') %>
                <br/>
                Candidaturas
              </h1>
            </div>
          </div>
      <% end %>
    </div>
  </div>
  <div class="col-4">
    <div class="card-icons">
      <%= active_link_to instrucao_path do %>
          <div class="card">
            <div class="card-body text-center">
              <h1>
                <%= fa_icon('info', style: 'font-size: 5em;') %>
                <br/>
                Instruções
              </h1>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>

<% if current_account.is_coordenador? %>
    <div class="row mt-4">
      <div class="col-4 offset-2">
        <div class="card-icons">
          <%= active_link_to alunos_path do %>
              <div class="card">
                <div class="card-body text-center">
                  <h1>
                    <%= fa_icon('users', style: 'font-size: 5em;') %>
                    <br/>
                    Alunos
                  </h1>
                </div>
              </div>
          <% end %>
        </div>
      </div>
      <div class="col-4">
        <div class="card-icons">
          <%= active_link_to empresas_path do %>
              <div class="card">
                <div class="card-body text-center">
                  <h1>
                    <%= fa_icon('building', style: 'font-size: 5em;') %>
                    <br/>
                    Empresas
                  </h1>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
<% end %>
