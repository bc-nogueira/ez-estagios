<p id="notice"><%= notice %></p>

<h1><%= @vaga.titulo %></h1>

<p class="row">
  <strong class="col-2">Empresa:</strong>
  <%= @vaga.empresa.nome %>
</p>

<p class="row">
  <strong class="col-2">Descricao:</strong>
  <%= @vaga.descricao %>
</p>

<p class="row">
  <strong class="col-2">Data fim:</strong>
  <%= @vaga.data_fim.to_date %>
</p>

<p class="row">
  <strong class="col-2">Data resposta:</strong>
  <%= @vaga.data_resposta.to_date %>
</p>

<div class="row">
  <%= link_to 'Editar', edit_vaga_path(@vaga), class: 'btn btn-primary col-1' %>
  <%= link_to 'Voltar', vagas_path, class: 'btn btn-secondary col-1 offset-1' %>
</div>