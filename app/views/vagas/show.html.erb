<div class="card p-3 mb-3">
  <div class="row">
    <div class="col-2">
      <% if @vaga.empresa_avatar.present? %>
        <%= image_tag @vaga.empresa_avatar.medium.url %>
      <% else %>
        <%= image_tag "default_company.png" %>
      <% end %>
    </div>

    <div class="col-10">
      <h1><%= @vaga.titulo %></h1>
      <div class="row">
        <strong class="col-2">Empresa:</strong>
        <%= link_to empresa_path(@vaga.empresa.id) do %>
          <%= @vaga.empresa.nome %>
        <% end %>
      </div>

      <div class="row">
        <strong class="col-2">Descricao:</strong>
        <%= @vaga.descricao %>
      </div>

      <div class="row">
        <strong class="col-2">Data fim:</strong>
        <%= @vaga.data_fim.strftime("%d/%m/%Y") %>
      </div>

      <div class="row">
        <strong class="col-2">Data resposta:</strong>
        <%= @vaga.data_resposta.strftime("%d/%m/%Y") %>
      </div>

      <% if current_account.is_empresa? && current_account.perfil.id == @vaga.empresa.id %>
        <div class="row">
          <strong class="col-2">Situação:</strong>
          <%= texto_situacao_vaga @vaga %>
        </div>
      <% end %>
    </div>
  </div>
  <hr>
  <div class="row">
    <strong class="col-4">Habilidades Desejadas:</strong>
    <% @vaga.vaga_habilidades.each do |habilidade| %>
      <span class="badge badge-primary d-block ml-2"><%= habilidade.nome %></span>
    <% end %>
  </div>
</div>

<%= render 'vagas/habilidades' %>

<div class="card p-3 mb-3">
  <% if current_account.is_empresa? %>
    <div class="row">
      <%= link_to 'Editar', edit_vaga_path(@vaga), class: 'btn btn-primary col-1 ml-3' %>
      <%= link_to 'Voltar', vagas_path, class: 'btn btn-secondary col-1 ml-3' %>
    </div>
  <% end %>
  <% if current_account.is_aluno? %>
    <%= form_for AlunoVaga.new do |f| %>
      <%= f.hidden_field :aluno_id, value: current_account.perfil.papel.id %>
      <%= f.hidden_field :vaga_id, value: @vaga.id %>
      <%= f.submit 'Inscrever-se', class: 'btn btn-primary' %>
    <% end %>
  <% end %>
</div>